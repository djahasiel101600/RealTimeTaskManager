# ===========================================
# Task Manager - Production Environment
# ===========================================
# Copy this file to .env and update values for production
# NEVER commit .env to version control!

# ===========================================
# SECURITY - MUST CHANGE FOR PRODUCTION
# ===========================================

# Django secret key - Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-generate-a-real-secret-key-minimum-50-chars

# Database password - Use a strong password
DB_PASSWORD=change-me-use-a-strong-password

# Redis password
REDIS_PASSWORD=change-me-use-a-strong-password

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Debug mode - MUST be 0 in production
DEBUG=0

# Allowed hosts - Add your domain(s)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CORS origins - Add your frontend domain(s)
CORS_ALLOWED_ORIGINS=https://your-domain.com

# ===========================================
# FRONTEND (Vite Build Args)
# ===========================================

# API URL - Use /api for nginx proxy, or full URL
VITE_API_URL=/api

# WebSocket URL - Use your domain
VITE_WS_URL=wss://your-domain.com

# Environment
REACT_APP_ENV=production

# ===========================================
# OPTIONAL: EMAIL (for notifications)
# ===========================================

EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ===========================================
# OPTIONAL: SUPERUSER CREATION
# ===========================================
# Set these to auto-create a superuser on first run

# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_EMAIL=admin@example.com
# DJANGO_SUPERUSER_PASSWORD=change-me-strong-password
